</div>

<div class="container">
    <h1>Keep your movies organized</h1>
    <p>Don't waste time and enjoy a good movie session</p>
    <%= link_to "Create a new list", new_list_path %>


<div class="cards">
  <% @lists.each do |list| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.image_url %>)">
       <%= link_to list.name, list_path(list) %>
    </div>
  <% end %>
</div>
</div>

